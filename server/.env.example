# Configuration serveur
NODE_ENV=development
PORT=3000

# Base de données PostgreSQL (AlwaysData)
# Format: postgres://user:password@host:port/database
DATABASE_URL=postgres://username:password@postgresql-username.alwaysdata.net:5432/username_cmastery

# Configuration JWT
JWT_SECRET=votre_secret_jwt_tres_long_et_securise_ici
JWT_EXPIRES_IN=7d

# Configuration CORS (domaines autorisés)
CORS_ORIGIN=http://localhost:5173,https://votre-domaine.alwaysdata.net

# Chemin de stockage des soumissions
SUBMISSIONS_PATH=./submissions

# Configuration optionnelle pour la compilation C (si disponible)
GCC_PATH=/usr/bin/gcc
VALGRIND_PATH=/usr/bin/valgrind
