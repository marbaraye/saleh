# Configuration locale pour le développement
# Copier ce fichier en .env.local et adapter les valeurs

NODE_ENV=development
PORT=3000

# Base de données PostgreSQL locale
DATABASE_URL=postgresql://postgres:password@localhost:5432/c_mastery_dev

# JWT
JWT_SECRET=dev_secret_key_not_secure_use_for_dev_only
JWT_REFRESH_SECRET=dev_refresh_secret_key_not_secure_use_for_dev_only
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS - Autoriser localhost pour le développement
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Stockage
SUBMISSIONS_PATH=./submissions

# Logging
LOG_LEVEL=debug
